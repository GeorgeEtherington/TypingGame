<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="screenController" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="typingGame.GameScreen.GameScreenController">
   <center>
      <FlowPane alignment="CENTER" hgap="20.0" prefHeight="200.0" prefWidth="394.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="inputBox" onKeyPressed="#checkKeyPressed">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitInput" text="Submit" />
         </children>
      </FlowPane>
   </center>
   <top>
      <FlowPane alignment="CENTER" hgap="10.0" prefHeight="123.0" prefWidth="631.0" BorderPane.alignment="CENTER">

         <children>
            <Label fx:id="timerLabel" text="10" />
            <TextField fx:id="levelBox" editable="false" prefHeight="71.0" prefWidth="367.0">
               <font>
                  <Font size="26.0" />
               </font>
            </TextField>
         </children>
      </FlowPane>
   </top>
   <right>
      <FlowPane alignment="CENTER" hgap="5.0" prefHeight="200.0" prefWidth="173.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Score:" />
            <Label fx:id="scoreLabel" text="0" />
         </children>
      </FlowPane>
   </right>
</BorderPane>
