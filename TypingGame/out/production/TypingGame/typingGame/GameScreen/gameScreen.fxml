<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="typingGame.GameScreen.GameScreenController">
   <center>
      <FlowPane alignment="CENTER" hgap="20.0" prefHeight="200.0" prefWidth="394.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="inputBox">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitInput" text="Submit" />
         </children>
      </FlowPane>
   </center>
   <top>
      <FlowPane alignment="CENTER" hgap="20.0" prefHeight="123.0" prefWidth="631.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="levelBox" editable="false" prefHeight="71.0" prefWidth="367.0">
               <font>
                  <Font size="26.0" />
               </font>
            </TextField>
            <TextField fx:id="timerTextbox" prefHeight="41.0" prefWidth="70.0" text="10"  />
         </children>
      </FlowPane>
   </top>
   <right>
      <FlowPane alignment="CENTER" prefHeight="145.0" prefWidth="152.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startGame" text="Start" />
         </children>
      </FlowPane>
   </right>
</BorderPane>
